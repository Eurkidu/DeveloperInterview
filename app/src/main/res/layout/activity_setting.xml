<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    tools:context="com.github.keyboard3.developerinterview.SettingActivity">

    <LinearLayout
        android:id="@+id/ll_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:padding="15dp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_output" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="导出题目" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="15dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/ll_output">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_input" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="导入题目" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="@android:color/white"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="版本" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/line_color"
        app:layout_constraintTop_toBottomOf="@id/ll_output"></View>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/line_color"
        app:layout_constraintTop_toTopOf="@id/ll_output"></View>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/line_color"
        app:layout_constraintBottom_toBottomOf="@id/ll_input"></View>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/line_color"
        app:layout_constraintTop_toTopOf="@id/ll_version"></View>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/line_color"
        app:layout_constraintBottom_toBottomOf="@id/ll_version"></View>
</android.support.constraint.ConstraintLayout>